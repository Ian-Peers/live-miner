Custom_xorg_config () {
	if [ ! -e /lib/live/mount/medium/live/xorg.conf ]
	then
		return
	fi

	echo -n ' custom-xorg-config'

	# Copy the config file out of the read-only image mount; the user
	# can then edit the file at run-time if they wish.
	cp /lib/live/mount/medium/live/xorg.conf /etc/X11/xorg.conf
}

Custom_xorg_config

